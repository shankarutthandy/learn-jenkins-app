pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:latest'
                }
            }
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }
        stage('Test'){
            agent{
                docker{
                    image 'node:latest'
                }
            }
            steps{
                sh '''
                echo "Test Stage"
                npm test
                '''
            }
        }
    }
}
